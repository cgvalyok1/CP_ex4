#ifndef ENEMY_H
#define ENEMY_H


class Enemy
{
    public:
        Enemy(int h, int s)
        {
            health = h;
            strength = s;
            isalive = true;
        }

        int get_health()
        {
            return health;
        }

        void set_health(int h)
        {
            health = h;
        }

        int get_strength()
        {
            return strength;
        }

        void set_strength(int s)
        {
            strength = s;
        }

    protected:

    private:
        int health, strength;
};

#endif // ENEMY_H
